<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
 <thead>
   <tr>
     <th>Flight Name</th>
     <th>Origin</th>
     <th>Destination</th>
     <th>Departure</th>
     <th>Plane</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @flights.each do |flight| %>
     <tr>
       <td><%= flight.name %></td>
       <td><%= flight.origin %></td>
       <td><%= flight.destination %></td>
       <td><%= flight.departure %></td>
       <td><%= flight.plane_id %></td>
       <td><%= link_to 'Show', flight %></td>

       <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
       <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %>

       </td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>
